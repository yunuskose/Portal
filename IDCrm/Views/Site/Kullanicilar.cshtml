@model List<IDCrm.Models.Kullanicilar>
@{
    ViewBag.Title = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <section class="card">
        <header class="card-header">
            Kullanıcı Listesi  
           <a href="@Url.Action("Kullanici","Site",new { id = 0 })" class="btn btn-sm btn-outline-info" style="position: absolute;right:10px;">Yeni Kullanıcı Tanımla</a>
        </header>
        <table class="table table-hover"  id="dynamic-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>İsim</th>
                    <th>E-Mail</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr style="@(item.Aktif == false ? "color:#B71C1C;" : "")">
                    <td>@item.ID</td>
                    <td>@Html.Raw(item.Aktif == false ? "<s>" + item.Adi + " " + item.Soyadi + "</s>" : item.Adi + " " + item.Soyadi)</td>
                    <td>@Html.Raw(item.Aktif == false ? "<s>" + item.Email + "</s>" : item.Email)</td>
                    <td><a href="@Url.Action("KullaniciYetki","Site",new { id = item.ID })" >Yetki |</a> <a href="@Url.Action("Kullanici","Site",new { id = item.ID })">Detay</a> | <a href="@Url.Action("KullaniciSil","Site",new { id = item.ID })" onclick="return confirm('Silmek istediğinizden emin misiniz?')">Sil</a></td>
                </tr>
                }
            </tbody>
        </table>
    </section>


